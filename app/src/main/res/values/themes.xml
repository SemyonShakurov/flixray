<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Jintly.Base" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="PlatformAdjusted.Theme.Jintly" parent="Theme.Jintly.Base">
        <item name="android:statusBarColor">@color/black30</item>
    </style>

    <style name="Theme.Jintly" parent="PlatformAdjusted.Theme.Jintly"/>

    <style name="Theme.Jintly.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.Jintly</item>
    </style>

</resources>
